<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller="Add_BusinessController" >
    <aura:attribute name="recordTypeId" type="String" />
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="section" type="List"/>
    <aura:attribute name="accountId" type="String"/>
    <aura:attribute name="isOpen" type="Boolean" default="false" />
    <aura:attribute name="fields" type="String[]" default="['Name','Business_Structure__c', 'Doing_Business_As_1__c','First_Name_Primary_Contact__c',
                                                           'Last_Name_Primary_Contact__c','Phone_Primary_Contact__c','Course_Provider__c',
                                                           'UBI_Number__c','Email__c','Business_Phone__c','Extension__c','Business_Website__c']" />
    
    <aura:registerEvent name="businessRefresh" type="c:RefreshEvent" />
    <div class="">
        <lightning:button name="Add Business" label="Add Business" class="add-biz-btn" onclick="{!c.handleClick}" />
    </div>
     <aura:if isTrue="{!v.isOpen}">
            
            <!--###### MODAL BOX Start######--> 
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container">
                    <!-- ###### MODAL BOX HEADER Start ######-->
                    <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.closeModel }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                    </header>
                    <!--###### MODAL BOX BODY Part Start######-->
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                     <!--   <lightning:recordForm
                              objectApiName="Account"
                              fields="{!v.fields}"
                              columns="2"
                              recordTypeId="{!v.recordTypeId}"
                              onsuccess="{!c.handleSuccess}" 
                              oncancel="{!c.closeModel}"
                              onchange="{!c.fieldchange}"
                              />-->

 <lightning:recordEditForm density="comfy" aura:id="editForm" recordId="{!v.recordTypeId}" objectApiName="Account"  onsuccess="{!c.handleSuccess}" >
<div class="slds-grid slds-wrap txtalign">
 <aura:iteration items="{!v.fields}" var="fieldlist" indexVar="fieldCount">
      <lightning:inputField fieldName="{!fieldlist}" class="field-size multi-field"  onchange="{!c.fieldchange}" /> 
</aura:iteration>
    <div class="slds-m-around_xx-small btnCenter">
      <lightning:button variant="Neutral" type="button" label="Cancel" name="Cancel" class="btnHeight"  onclick="{! c.closeModel }"/>
     <lightning:button variant="brand" type="submit" name="Save" label="Save" />
    </div>
</div>
</lightning:recordEditForm>

                    </div>
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
            <!--###### MODAL BOX Part END Here ######-->
            
        </aura:if>
    
     
   
</aura:component>