<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller="Add_BusinessController" >
    <aura:attribute name="recordTypeId" type="String" />
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="section" type="List"/>
    <aura:attribute name="accountId" type="String"/>
    <!--aura:attribute name="fields" type="String[]" default="['Name','Business_Structure__c', 'Doing_Business_As_1__c','First_Name_Primary_Contact__c',
                                                           'Last_Name_Primary_Contact__c','Phone_Primary_Contact__c','Course_Provider__c',
                                                           'UBI_Number__c','Email__c','Business_Phone__c','Extension__c','Business_Website__c']" /-->
    <aura:attribute name="ubiValidated" type="Boolean" default="false" />
    <aura:attribute name="ubiValueEntered" type="String"/>
    <aura:attribute name="ubiValidationResponse" type="String" default="NA" />
    <aura:attribute name="ubiDetails" type="Object"/>
    <aura:attribute name="isOpen" type="Boolean" default="false" />
    <aura:attribute name="validateFields" type="List" default='[{"lName":"Name", "Required__c":true, "Error_Message__c":"Account Name is required.", "ValidationCriteria__c":"", "Regex_Validation__c":""},
                                                               {"lName":"Business_Structure__c", "Required__c":true, "Error_Message__c":"Business Structure is required.", "ValidationCriteria__c":"", "Regex_Validation__c":""},
                                                               /*{"lName":"Doing_Business_As_1__c", "Required__c":false, "Error_Message__c":"Doing Business As is required.", "ValidationCriteria__c":"", "Regex_Validation__c":""},*/
                                                               {"lName":"First_Name_Primary_Contact__c", "Required__c":true, "Error_Message__c":"Primary Contact First Name is required.", "ValidationCriteria__c":"", "Regex_Validation__c":""},
                                                               {"lName":"Last_Name_Primary_Contact__c", "Required__c":true, "Error_Message__c":"Primary Contact Last Name is required.", "ValidationCriteria__c":"", "Regex_Validation__c":""},
                                                               {"lName":"Phone_Primary_Contact__c", "Required__c":true, "Error_Message__c":"Primary Contact Phone should be in xxx.xxx.xxxx format.", "ValidationCriteria__c":"10,3,3,.", "Regex_Validation__c":"^\\(?([0-9]{3})\\)?[.]?([0-9]{3})[.]?([0-9]{4})$"},
                                                               {"lName":"Course_Provider__c", "Required__c":false, "Error_Message__c":"","ValidationCriteria__c":"", "Regex_Validation__c":""},
                                                               {"lName":"UBI_Number__c", "Required__c":true,"ValidationCriteria__c":"9,3,3,.", "Regex_Validation__c":"^\\(?([0-9]{3})\\)?[-]?([0-9]{3})[-]?([0-9]{3})$", "Error_Message__c":"UBI Number should be in xxx-xxx-xxx format."},
                                                               {"lName":"Bus_Id__c", "Required__c":false, "ValidationCriteria__c":"", "Regex_Validation__c":"^[0-9]{3}$", "Error_Message__c":"UBI Business ID should contain only 3 digits."},
                                                               {"lName":"Loc_Id__c", "Required__c":false, "ValidationCriteria__c":"", "Regex_Validation__c":"^[0-9]{4}$", "Error_Message__c":"UBI Location ID should contain only 4 digits."},
                                                               {"lName":"Email__c", "Required__c":true, "Error_Message__c":"Business Email is required.", "ValidationCriteria__c":"", "Regex_Validation__c":"^\\w+([\\.-]?\\w+)*@\\w+([\\.-]?\\w+)*(\\.\\w{2,3})+$"},
                                                               {"lName":"Business_Phone__c", "Required__c":true, "Error_Message__c":"Business Phone should be in xxx.xxx.xxxx format.", "ValidationCriteria__c":"10,3,3,.", "Regex_Validation__c":"^\\(?([0-9]{3})\\)?[.]?([0-9]{3})[.]?([0-9]{4})$"},
                                                               {"lName":"Extension__c", "Required__c":false, "Error_Message__c":"", "ValidationCriteria__c":"", "Regex_Validation__c":""},
															   {"lName":"UBI_Status__c", "Required__c":false, "Error_Message__c":"", "ValidationCriteria__c":"", "Regex_Validation__c":""},
                                                               {"lName":"Business_Website__c", "Required__c":false, "Error_Message__c":"", "ValidationCriteria__c":"", "Regex_Validation__c":""}]' />  
    <aura:attribute name="loadingSpinner" type="Boolean" default="false" />
    <aura:attribute name="buttonDisable" type="Boolean" default="false" />
    
    <aura:registerEvent name="businessRefresh" type="c:RefreshEvent" /> 
    <!--<div class="{!v.isOpen?'slds-hide':'show-btn'}">
        <lightning:button name="Add Business" label="Add Business" class="add-biz-btn" variant="brand" onclick="{!c.handleClick}" />
    </div> -->
    <aura:if isTrue="{!v.loadingSpinner}">
        <lightning:spinner aura:id="spinner" alternativeText="Page is loading..." />
    </aura:if>
    <div class="add-biz-wrapper">
        <div class="add-biz-title">
            <h1>Add a New Business</h1>
        </div>
        <!--###### MODAL BOX Start######--> 
        <!-- <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container"> -->
        <!-- ###### MODAL BOX HEADER Start ######-->
        <!-- <header class="slds-modal__header">
                        <lightning:buttonIcon iconName="utility:close"
                                              onclick="{! c.closeModel }"
                                              alternativeText="close"
                                              variant="bare-inverse"
                                              class="slds-modal__close"/>
                    </header> -->
        <!--###### MODAL BOX BODY Part Start######-->
        <!--<div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1"> -->
        <!--   <lightning:recordForm
                              objectApiName="Account"
                              fields="{!v.fields}"
                              columns="2"
                              recordTypeId="{!v.recordTypeId}"
                              onsuccess="{!c.handleSuccess}" 
                              oncancel="{!c.closeModel}"
                              onchange="{!c.fieldchange}"
                              />-->
        <div class="biz-fields-wrapper">
            <lightning:recordEditForm density="comfy" aura:id="editForm" recordId="{!v.recordTypeId}" objectApiName="Account"  onsuccess="{!c.handleSuccess}" onerror="{!c.handleError}" >
                <!--lightning:messages /-->
                <div class="slds-grid slds-wrap txtalign">
                    <aura:iteration items="{!v.validateFields}" var="fieldlist" indexVar="fieldCount">
                        <aura:if isTrue="{!fieldlist.Required__c || fieldlist.Regex_Validation__c !=''}">
                            <aura:if isTrue="{!fieldlist.lName == 'UBI_Number__c' || fieldlist.lName == 'UBI_Status__c'}">
                                <aura:if isTrue="{!fieldlist.lName == 'UBI_Number__c'}">
                                    <lightning:inputField aura:id="validateField" fieldName="{!fieldlist.lName}" class="{!'field-size multi-field' + (fieldlist.Required__c?' required':'')}"  onchange="{!c.fieldchange}" value="{!v.ubiValueEntered}"/>
                                    <lightning:button variant="brand" type="button" label="Validate UBI" name="Validate" class="btnHeight back-button"  onclick="{!c.validateUBINumber}"/>
                                </aura:if>
                                <aura:if isTrue="{!fieldlist.lName == 'UBI_Status__c'}">
                                    <lightning:inputField aura:id="validateField" fieldName="{!fieldlist.lName}" class="{!'field-size multi-field slds-hide' + (fieldlist.Required__c?' required':'')}" value="{!v.ubiValidationResponse}"/>
                                </aura:if>
                                <aura:if isTrue="{!fieldlist.lName == 'Name'}">
                                    <lightning:inputField aura:id="validateField" fieldName="{!fieldlist.lName}" class="{!'field-size multi-field slds-hide' + (fieldlist.Required__c?' required':'')}" />
                                </aura:if>
                                <aura:set attribute="else">
                                    <label class="{!fieldlist.lName == 'Name'?'label-style required':'slds-hide'}">
                                        Business Name
                                    </label>
                                    <lightning:inputField aura:id="validateField" fieldName="{!fieldlist.lName}" class="{!'field-size multi-field' + (fieldlist.Required__c?' required':'') + (fieldlist.lName == 'Business_Structure__c'?' biz-structure':'')}"  onchange="{!c.fieldchange}" variant="{!fieldlist.lName == 'Name'?'label-hidden':''}"/>
                                    
                                </aura:set>
                            </aura:if> 
                            <aura:set attribute="else">
                                <aura:if isTrue="{!fieldlist.lName == 'UBI_Status__c'}">
                                    <lightning:inputField fieldName="{!fieldlist.lName}" class="field-size multi-field slds-hide" value="{!v.ubiValidationResponse}"/>
                                    <aura:set attribute="else">
                                        <aura:if isTrue="{!fieldlist.lName == 'Name'}">
                                            <lightning:inputField aura:id="validateField" fieldName="{!fieldlist.lName}" class="{!'field-size multi-field slds-hide' + (fieldlist.Required__c?' required':'')}"/>
                                        </aura:if>
                                        <div class="{!fieldlist.lName == 'Course_Provider__c'?'course-text':'slds-hide'}">
                                            To be able to submit course approval applications, you need to check this box.
                                        </div>
                                        <lightning:inputField fieldName="{!fieldlist.lName}" class="{!'field-size multi-field' + (fieldlist.lName == 'Course_Provider__c'?' course-field':'')}"  onchange="{!c.fieldchange}" />  
                                        
                                    </aura:set>
                                </aura:if>
                            </aura:set>
                        </aura:if>
                    </aura:iteration>
                    
                </div>
            </lightning:recordEditForm>
        </div>
        <div class="btn-wrapper">
            <lightning:button variant="Neutral" type="button" label="Back" name="Cancel" class="btnHeight back-button"  onclick="{! c.returnBusiness }"/>
            <lightning:button variant="brand" type="button" name="Save" label="Save" onclick="{!c.validateFields}" disabled="{!v.buttonDisable}" class="add-button"/>
        </div>
        <!--</div>
                </div>
            </section> -->
        <!-- <div class="slds-backdrop slds-backdrop_open"></div> -->
        <!--###### MODAL BOX Part END Here ######-->
    </div>
    <!-- UBI number pop up -->
    <aura:if isTrue="{!v.isOpen}">             
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- pop up header-->
                <header class="slds-modal__header">
                    <h2>UBI Search Details</h2>
                </header>
                <!-- pop up body -->
                <div class="slds-modal__content slds-p-around_medium">
                    <div class="slds-form-element slds-form-element_horizontal">
                        <div class="slds-form-element__label">Business Name:<span>&nbsp;</span></div>
                        <div class="slds-form-element__control btnnrml">{!v.ubiDetails.Name}</div>
                    </div>
                    <div class="slds-form-element slds-form-element_horizontal">
                        <div class="slds-form-element__label">Status:<span>&nbsp;</span></div>
                        <div class="slds-form-element__control btnnrml">{!v.ubiDetails.UBI_Status__c}</div>
                    </div>
                    <div class="slds-form-element slds-form-element_horizontal">
                        <div class="slds-form-element__label">Business Structure:<span>&nbsp;</span></div>
                        <div class="slds-form-element__control btnnrml">{!v.ubiDetails.Description}</div>
                    </div>
                </div>
                <!-- pop up footer -->
                <footer class="slds-modal__footer">
                    <!--lightning:button variant="neutral" 
                                      label="Cancel"
                                      title="Cancel"
                                      onclick="{!c.cancelUBIDetails}"/-->
                    <lightning:button variant="brand" 
                                      label="OK"
                                      title="ok"
                                      onclick="{!c.confirmUBIDetails}"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
    <!-- UBI number pop up -->
</aura:component>