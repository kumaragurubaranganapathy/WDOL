<aura:component controller = "Lnp_CommonHeader_AC" implements="forceCommunity:availableForAllPageTypes" access="global" >
    <aura:attribute name="addressList" type="Object[]" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <div class="main-wrapper">
        <div class="address-header">
            <div class="address-title">
                License Mailing Address
            </div>
            <div class="address-subtitle">
                Select the address that will be used for all postal communications from the board for the following license.
            </div>
            <div class="address-line">
                <span class="address">
                    ADDRESS
                </span>
                <lightning:button variant="base" onclick="" class="add-address">
                    Add Address
                </lightning:button>
            </div>
        </div>
        <div class="address-cards-wrapper">
            <div class="arrows-wrapper">
                <img src="{!$Resource.LnP_Icons+'/LnP_Icons/Dropdown.svg'}" alt="left-arrow" class="arrow-style left" onclick="{!c.scrollCards}"/>
                <div class="address-cards">
                    <c:LnP_AddressCard addressList="{!v.addressList}"/>
                </div>
                <img src="{!$Resource.LnP_Icons+'/LnP_Icons/Dropdown.svg'}" alt="left-arrow" class="arrow-style right" onclick="{!c.scrollCards}"/>
            </div>
            
        </div>
        
        
        
    </div>
</aura:component>