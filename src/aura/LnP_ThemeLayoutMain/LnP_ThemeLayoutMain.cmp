<aura:component implements="forceCommunity:themeLayout" access="global" description="LnP Theme Layout">
    <aura:attribute name="isBrowserIE" type="Boolean" />
    <aura:attribute name="isScriptLoaded" type="Boolean" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <aura:if isTrue="{!v.isScriptLoaded}">
        <aura:if isTrue="{!!v.isBrowserIE}">
            <div class="layout-wrapper" onclick="{!c.closeServiceMenu}">
                <div class="main-container slds-grid slds-grid_vertical" aura:id="mainWrapper">
                    <div class="header">
                        <!--c:LnP_CommonHeader aura:id="header"/-->
                        <c:LnP_comHeaderPublicForms aura:id="header"/>
                    </div>            
                    <div class="main-content" aura:id="main-content" role="main">
                        {!v.body}
                    </div>
                    <div class="footer">               
                        <c:LnP_Footer />
                    </div>            
                </div>
            </div>
            
            <aura:set attribute = "else">
                <div class="main-content ie-content">
                    <div class="ie-header">                       
                        <img class="logo" src="{!$Resource.LnP_Icons+'/LnP_Icons/LnGLogonew.png'}" alt="WA state department of licencing logo" />
                    </div>  
                    <c:ExplorerErrorPage dispPage = "true" />
                    <div class="footer">               
                        <c:LnP_Footer />
                    </div> 
                </div>
            </aura:set>
            
        </aura:if>
    </aura:if>
</aura:component>