<aura:component implements="forceCommunity:themeLayout" access="global" description="LnP Theme Layout">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
   
	<div class="layout-wrapper" onclick="{!c.closeServiceMenu}">
       <div class="main-container slds-grid slds-grid_vertical" aura:id="mainWrapper">
            <div class="header">
                <!--c:LnP_CommonHeader aura:id="header"/-->
                <c:LnP_comHeaderPublicForms aura:id="header"/>
            </div>            
            <div class="main-content" aura:id="main-content" role="main">
                {!v.body}
            </div>
            <div class="footer">               
                <c:LnP_Footer />
            </div>            
        </div>
    </div>
</aura:component>