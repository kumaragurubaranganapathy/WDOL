<!-- LnP_ReceiptDHPModal  -->
<aura:component controller="LnP_ReceiptDHPPopupModalCtrl" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction,force:hasSObjectName" access="global" >
    <aura:attribute name="fields" type="String[]" default="Name,DHP__c,Inactivate_License_Date__c,Override_25_Handling_Fee__c,Reason_for_DHP__c" />
   
    <lightning:card iconName="custom:custom19" title="Edit">
        <div class="slds-p-left_large slds-p-right_medium">	
            <lightning:recordForm aura:id="recordViewForm" 
                                  objectApiName="MUSW__Receipt__c"
                                  columns="2"  
                                  fields="{!v.fields}"
                                  recordId="{!v.recordId}"                                  
                                  mode="view"                                 
                                  onsuccess="{!c.onSuccess}"
                                  onsubmit="{!c.onSubmit}"
                                  onload="{!c.onLoad}"
                                  onerror="{!c.onError}"
                                  />   
            
        </div>
    </lightning:card>
</aura:component>