<aura:component controller = "Lnp_CommonHeader_AC" implements="forceCommunity:availableForAllPageTypes" access="global" >
    
    <aura:attribute name="customLblMap" type="Map" />
    <aura:attribute name="toggleNav" type="Boolean" default="false"/>
    <aura:attribute name="toggleNavText" type="string" default="Menu" />
    <aura:attribute name="serviceMenu" type="Boolean" default="false" />
    <aura:attribute name="loginCheck" type="Boolean" default="false" />
    <aura:attribute name="itemsList" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:method name="closeServiceMenu"
                 description="To close the service menu in desktop" action="{!c.closeServiceMenu}">
    </aura:method>
    <div class="menu-wrapper">
        
        <lightning:layout class="slds-show_large main-wrapper">
            <lightning:layoutItem class="logo-wrapper" size="3">
                <div class="logo-div">
                    <img class="logo" src="{!$Resource.LnP_Icons+'/LnP_Icons/LnGLogo.svg'}" alt="logo" />
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem size="6">
                <div class="top-nav">
                    <ul>
                        <!--<aura:iteration items="{!v.itemsList}" var="item">
                            <li><a target="_blank" href="{!item.value}">{!item.key}</a></li>
                        </aura:iteration> -->
                        <li><a class="home" href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Home}</a></li>
                        <li><a class="about" href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_AboutUs}</a></li>
                        <li class="{!v.serviceMenu?'service-active':''}"><a class="service" href="javascript:void(0)" onclick="{!c.serviceMenuOpen}">{!v.customLblMap.LnP_CommonHeader_Service}</a><!--<img src="{!$Resource.LnP_Icons+'/LnP_Icons/Dropdown.svg'}" alt="dropdown arrow" />--></li>                            
                        <li><a class="support" href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Support}</a></li>
                    </ul>                	
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem class="login-wrapper" size="3"> 
                <div class="register-wrapper">
                    <aura:if isTrue="{!v.loginCheck}">
                        <div class="user-wrapper">
                            <img src="{!$Resource.LnP_Icons+'/LnP_Icons/search.svg'}" class="logo-style" />
                            <img src="{!$Resource.LnP_Icons+'/LnP_Icons/bell.svg'}" class="logo-style" />
                            <img src="{!$Resource.LnP_Icons+'/LnP_Icons/cart.svg'}" class="logo-style" />
                            <img src="{!$Resource.LnP_Icons+'/LnP_Icons/user.svg'}" class="logo-style" />                            
                        </div>
                        <aura:set attribute="else">
                            <div class="register-div">
                                <img class="logo-style" src="{!$Resource.LnP_Icons+'/LnP_Icons/Register.svg'}" alt="register" />
                                <a class="link-style" href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Register}</a>
                            </div>
                            <div class="login-div">
                                <img class="logo-style" src="{!$Resource.LnP_Icons+'/LnP_Icons/Login.svg'}" alt="Login" />
                                <a class="link-style" href="javascript:void(0)" onclick="{!c.loginUser}">{!v.customLblMap.LnP_CommonHeader_Login}</a>
                            </div>
                        </aura:set>
                    </aura:if>
                </div>
                <div class="translate">
                    <img src="{!$Resource.LnP_Icons+'/LnP_Icons/translate.svg'}" alt="translate" />
                </div>
            </lightning:layoutItem>
        </lightning:layout>
        
        <!-- service menu -->
        
        <div class="{! 'service-wrapper' + (v.serviceMenu ? ' service-open' : '')}">
            <div class="top-nav">
                <ul>
                    <li><a href="javascript:void(0)">{!v.customLblMap.LnP_Licenses}</a></li>
                    <li><a href="javascript:void(0)">{!v.customLblMap.LnP_Praise}</a></li>
                    <li><a href="javascript:void(0)">{!v.customLblMap.LnP_FileComplaint}</a></li>
                    <li><a href="javascript:void(0)">{!v.customLblMap.LnP_LicenseList}</a></li>
                    
                </ul>                	
            </div>
        </div>
        
        <!-- Mobile Header -->
        <div class="slds-grid slds-hide_large main-wrapper-mob">
            <lightning:layoutItem class="menu-button" size="4">
                <lightning:button onclick="{!c.toggleMenu}">
                    {!v.toggleNavText}
                </lightning:button>
            </lightning:layoutItem>
            <lightning:layoutItem class="logo-wrapper" size="8">
                <div class="logo-div">
                    <img class="logo" src="{!$Resource.LnP_Icons+'/LnP_Icons/LnGLogo.svg'}" alt="logo" />
                </div>
            </lightning:layoutItem>
            
            <div class="{!'mob-menu' + (v.toggleNav?' menu-style':'')}">
                
                <div class="top-nav mob-nav">
                    <ul>
                        <li><a href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Home}</a></li>
                        <li><a href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_AboutUs}</a></li>
                        <li><a href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Service}</a></li>
                        <li><a href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_News}</a></li>
                        <li><a href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Support}</a></li>
                    </ul>       
                </div>
                <div class="mob-login" size="4">               
                    <div class="register-div">
                        <img class="logo-style" src="{!$Resource.LnP_Icons+'/LnP_Icons/Register.svg'}" alt="register" />
                        <a class="link-style" href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Register}</a>
                    </div>
                    <div class="login-div-mob">
                        <img class="logo-style" src="{!$Resource.LnP_Icons+'/LnP_Icons/Login.svg'}" alt="Login" />
                        <a class="link-style" href="javascript:void(0)">{!v.customLblMap.LnP_CommonHeader_Login}</a>
                    </div>                
                </div>
            </div>
            
            
            
        </div>
    </div>
    
</aura:component>