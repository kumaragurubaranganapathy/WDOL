<aura:component controller = "Lnp_CommonHeader_AC" implements="flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="isPageLoaded" type="Boolean" default="false" />
    <aura:attribute name="displayotherprofessionspage" type="Boolean" default="false" />
    <aura:attribute name="isLoggedIn" type="Boolean" default="false" />
    <aura:attribute name="isValidCommunityUser" type="Boolean" default="false" /> 
    <aura:attribute name="helpPage" type="Boolean" default="false" /> 
    <aura:handler name="PortalArticleHandler" event="c:PortalArticles" action="{!c.handlePortalArticle}"/>    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <aura:if isTrue="{!v.isPageLoaded}">
        <div class="home-wrapper">
            <h1 class="main-title">             
                
                {!v.helpPage?'Help':'Manage Your Professional and Business Licenses Online'}
            </h1>
            <aura:if isTrue="{!and(v.isLoggedIn,!v.helpPage)}">       
                
                <c:ToDo_Tasks />   
                
            </aura:if>
            <!--<aura:if isTrue="{!!v.isValidCommunityUser}"> -->
            <aura:if isTrue="{!!v.helpPage}">
                <c:LnP_DynamicPortalArticleRenderer aura:id="get-started" isLoggedIn="{!v.isLoggedIn}" />
                
                <div class="{!v.displayotherprofessionspage?'other-prof-wrapper':'slds-hide'}" id="other-prof">
                     
                        <c:LnP_DynamicPortalArticleRenderer aura:id="other-prof" articleTitle="Other Professions"/>
                    
                </div>
                <aura:set attribute="else">
                    <div class="help-wrapper">
                        <h2> Questions? Need help?</h2>
                        <ul class="list-style">
                            <li>Call us <a href="tel:360-664-9696">360-664-9696</a></li>
                            <li>Email us <a href="mailto:test@dol.wa.gov">test@dol.wa.gov</a></li>
                        </ul>
                    </div>
                </aura:set>
            </aura:if>
            <!-- </aura:if>  -->
            <aura:set attribute="else">
                <lightning:spinner aura:id="spinner" alternativeText="Page is loading..." />
            </aura:set>
        </div>
    </aura:if>
    <!--<c:Search_test />-->
    <!--<c:LnP_HomePageNews />-->
    <!--<c:ToDo_Tasks /> -->	
</aura:component>