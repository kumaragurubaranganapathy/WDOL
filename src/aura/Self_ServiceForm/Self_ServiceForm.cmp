<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global" controller="Polaris_AMRLinkCntrl">
    <aura:attribute name="objectApiName" type="String" description="object Api name to be passed to form"/>
    <aura:attribute name="recordIDforSSAMR" type="String" description="record id to be used in the record edit form" />
    <aura:attribute name="fieldApiNames" type="List" description="fields to be displayed in the form"/>
    <aura:attribute name="redirectURL" type="String" description="to redirect once after he clicks on cancel"/>
    <aura:attribute name="recordEditForm" type="Boolean" default="false" description="to show or hide address component"/>
    <aura:attribute name="address" type="Boolean" default="false" description="to show or hide address component"/>
    <aura:attribute name="customForm" type="Boolean" default="false" description="to show or hide website change request"/>
    <aura:attribute name="showPrintForm" type="Boolean" default="false" description="to show or hide print license change request"/>
    <aura:attribute name="existWebsite" type="String" description="to store the website field value."/>
    <aura:attribute name="thirdpartybillingcode" type="String" description="to identify third party Billing code function"/>
    <aura:attribute name="existingBillingCode" type="String" default="" description="store existing third party Billing code"/>
    <aura:attribute name="appId" type="String" />
    <aura:attribute name="contactName" type="String" />
    <aura:attribute name="accountName" type="String" />
    <aura:attribute name="contactId" type="Id" />
    <aura:attribute name="accountId" type="Id" />
    <aura:attribute name="AMRName" type="String" />
    <aura:attribute name="objectName" type="String" />    
    <aura:attribute name="iscontactAddress" type="Boolean" default="false" />
    <aura:attribute name="fieldsValidated" type="Boolean" default="false" />
    <aura:attribute name="outputcode" type="String" default=""/>
    <aura:attribute name="selectedDocumentId" type="string" default="069r0000001Z7RXAA0"/>
    <aura:attribute name="popupHeader" type="string" default="" description="On submit success popup header"/> 
    <aura:attribute name="popupBody" type="string" default="" description="On submit success popup body"/>
    <aura:attribute name="isOpen" type="boolean" default="false" description="Hide or Show popup boolean"/>

    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <!-- Form start -->
    <div class="self-service-wrapper">
        <aura:if isTrue="{!v.AMRName != null}">
        	<h1 class="amr-title">{!v.AMRName}</h1>
        </aura:if>
        
        <aura:if isTrue="{!v.recordEditForm}">
            <lightning:recordEditForm aura:id="UpdateContactId" recordId="{!v.recordIDforSSAMR}"
                                      objectApiName="{!v.objectApiName}"
                                      onsuccess="{!c.cancel}">
                <!-- the messages component is for error messages -->
                <!--<lightning:messages />-->
                <div class="service-form-container">
                    <div class="input-field-wrapper">
                        <aura:if isTrue="{!v.objectApiName == 'Account'}">
                            <h2 class="contact-name">{!v.accountName}</h2>
                            <aura:set attribute="else">
                                <h2 class="contact-name">{!v.contactName}</h2>
                            </aura:set>
                        </aura:if> 
                        
                        <aura:iteration items="{!v.fieldApiNames}" var="field">
                            <div class="input-field slds-p-top_large">
                                <lightning:inputField aura:id="input-fields" fieldName="{!field}" onchange="{!c.maskInput}" class="amrfield" />
                            </div>
                        </aura:iteration>
                    </div>
                    <div class="service-btn-container">
                        <lightning:button variant="neutral" type="cancel" name="cancel"  label="Cancel" title="Cancel" class="cancel-button" onclick="{!c.cancel}" />
                        <lightning:button variant="brand" type="{!v.fieldsValidated?'submit':'button'}"  name="submit" label="Submit" title="Submit" onclick="{!c.validateFields}" class="add-button" />
                    </div>
                </div>
            </lightning:recordEditForm>
        </aura:if>
        <!-- Form end -->
        <aura:if isTrue="{!v.address}">            
                <c:LnP_LicenseAddress changeOnlyMailingAdd="false" applicationId="{!v.appId}" aura:id="lnpStoreAddress" accountId = "{!v.accountId}" objectName = "{!v.objectName}"/>
            <div class="action-buttons"> 
                <lightning:button variant="neutral" type="cancel" name="Back" label="Back" title="Back" onclick="{!c.cancel}"/>
                <lightning:button variant="brand" type="save" name="save" label="Submit" title="Submit" onclick="{!c.cancel}"/>
            </div>
        </aura:if>
        <aura:if isTrue="{!v.iscontactAddress}">
            <div class="address-wrapper">
                <c:LnP_LicenseAddress changeAddress="true" contactId ="{!v.contactId}" aura:id="lnpStoreAddress"/>
            </div>
            <div class="action-buttons">
                <lightning:button type="cancel" name="back" label="Back" onclick="{!c.tolocation}" />
                <lightning:button variant="brand" type="save" name="save" label="Submit" title="Submit" onclick="{!c.tolocation}"/>
            </div>
        </aura:if>
        
        <aura:if isTrue="{!v.thirdpartybillingcode}">
            <h1 class="screen-title">Get Billing Code</h1>
            <lightning:recordEditForm recordId="{!v.recordIDforSSAMR}"
                                      objectApiName="{!v.objectApiName}"
                                      onsuccess="{!c.cancel}">
                <!-- the messages component is for error messages -->
                <lightning:messages />
                <div class="slds-grid slds-wrap slds-p-horizontal_xx-large slds-p-vertical_large service-form-container">
                    <aura:iteration items="{!v.fieldApiNames}" var="field">
                        <div class="slds-col slds-size_1-of-2">
                            <lightning:inputField fieldName="{!field}" value="{!v.outputcode}"/>
                        </div>
                    </aura:iteration>
                    <div class="slds-align_absolute-center slds-p-around_medium service-btn-container">
                        <lightning:button variant="neutral" type="cancel" name="cancel" label="Cancel" title="Cancel" onclick="{!c.cancel}"/>
                        <aura:if isTrue="{!v.existingBillingCode != ''}">
                            <lightning:button variant="brand"  name="CreateCode" label="CreateNewCode" title="CreateNewCode" onclick="{!c.createcode}" />
                        </aura:if>
                        <aura:if isTrue="{!v.existingBillingCode == ''}">
                            <lightning:button variant="brand"  name="CreateCode" label="Create Code" title="Create Code" onclick="{!c.createcode}" />
                        </aura:if>
                        
                    </div>
                </div>
            </lightning:recordEditForm>
        </aura:if>
        <aura:if isTrue="{!v.customForm}">
            <div class="slds-form-element slds-form-element_horizontal">
                <lightning:input type="text" label="License Web Address" value="{!v.existWebsite}"/>
            </div>
            <div class="slds-align_absolute-center slds-p-around_medium btnalign ">
                <lightning:button variant="neutral" type="cancel" name="cancel" label="Cancel" title="Cancel" class="cancel-button" onclick="{!c.cancel}"/>
                <lightning:button variant="brand" type="submit" name="submit" label="Submit" title="Submit" onclick="{!c.saveWebsite}" class="add-button"/>
            </div>
        </aura:if>
        <aura:if isTrue="{!v.showPrintForm}">
            <div class="slds-form-element">
                <lightning:select aura:id="printLicenseId" name="printLicense" label="How do you want to receive your license?"  required="true">
                    <option value="">--None--</option>
                    <!--<option value="email">Send to My Email</option>-->
                    <option value="DES">Send to my mailing address</option>
                    <option value="download">Download license</option>
                </lightning:select>
            </div>
            
            <div class="slds-align_absolute-center slds-p-around_medium ">
                <lightning:button variant="neutral" type="cancel" name="cancel" label="Cancel" title="Cancel" onclick="{!c.cancel}"/>
                <lightning:button variant="brand" type="submit" name="submit" label="Submit" title="Submit" onclick="{!c.printUpdate}"/>
                <!--<lightning:button variant="success" label="CreateCode" title="Success" onclick="{!!c.createcode}"/>-->
            </div>
        </aura:if>
    </div>
    <!-- Pop up start -->
    <aura:if isTrue="{!v.isOpen}">             
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <!-- pop up header-->
                <header class="slds-modal__header">
                    <lightning:buttonIcon iconName="utility:close"
                                          onclick="{! c.closeModel }"
                                          alternativeText="close"
                                          variant="bare-inverse"
                                          class="slds-modal__close"/>
                    <h2>{!v.popupHeader}</h2>
                </header>
                <!-- pop up body -->
                <div class="slds-modal__content slds-p-around_medium">
                    <p>{!v.popupBody}</p>
                </div>
                <!-- pop up footer -->
                <footer class="slds-modal__footer">
                    <lightning:button variant="brand" 
                                      label="Ok"
                                      title="Ok"
                                      onclick="{! c.closeModel }"/>
                </footer>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>
</aura:component>