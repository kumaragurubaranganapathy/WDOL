<aura:component >
    <aura:attribute name="progressBarTiles" type="Object[]" />
    <div class="progressDiv">
        <div class="progressDiv-wrap">
            <aura:iteration items="{!v.progressBarTiles}" indexVar="index" var="fields">
                <div class="progressDiv-wrap-item">
                    <div class="progressDiv-wrap-item-progress">
                        <div class="progress-block">
                            <div class="number">
                                <div class="number-wrap">
                                    <span class="number-wrap-content">{!index+1}</span> 
                                </div>
                            </div> 
                            <div class="progress-success">
                                <div class="icon-success">
                                    <img src="{!$Resource.LnP_Icons+'/LnP_Icons/user.svg'}" class="logo-style" />   
                                </div>
                            </div>
                            <div class="progress-error">
                                <div class="icon-error">
                                    <img src="{!$Resource.LnP_Icons+'/LnP_Icons/user.svg'}" class="logo-style" />   
                                </div>
                            </div>
                            <div class="progress-active">
                                <div class="icon-active">
                                    <img src="{!$Resource.LnP_Icons+'/LnP_Icons/user.svg'}" class="logo-style" />   
                                </div>
                            </div>
                            <aura:if isTrue="{!v.progressBarTiles.length-1 > index}">
                                <div class="progressDiv-wrap-item-divider">
                                </div>
                            </aura:if>
                        </div>
                        <div class="heading">
                            <span class="heading-text">{!fields.header}</span>
                        </div>
                    </div>
                </div>
            </aura:iteration>
        </div>
    </div>
</aura:component>