                                        <lightning:inputfield autocomplete="off" fieldName="{!rec.fieldName}" required="true" aura:id="inputCmp" class="label-hidden checkbox-style" onchange="{!c.inputClick}" id="{!rec.masking}"/>
                                    </aura:set>
                                </aura:if>
                            </div>
                        </aura:iteration>
