                                                            <lightning:inputfield autocomplete="off" label="{!rec.label}" name="{!itemRow}" aura:id="validateEditField1" fieldName="{!rec.fieldName}"  class="{!'edit-field'+(rec.fieldName=='Current__c'? ' checkbox-style ':' ') +' label-hidden '+ 'itemRow='+itemRow}" onchange="{!c.inputEditClick}" id="{!rec.masking}"/>
