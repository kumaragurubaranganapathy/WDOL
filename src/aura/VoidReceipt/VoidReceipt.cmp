<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" controller="BGBK.ReceiptService" access="global">
	
	<aura:attribute name="recordId" type="String" />
	<aura:attribute name="errorMessage" type="String" />
	<aura:handler name="init" value="{!this}" action="{!c.handleVoid}" />
	

	<div aura:id="loading"><h2 class="slds-text-heading--medium">
		Voiding receipt...
	</h2></div>

	<aura:if isTrue="{!v.errorMessage.length > 0}">
		<div>
			<p>{!v.errorMessage}</p>
			<button class="slds-button slds-button--neutral" onclick="{!c.close}">Close</button>
		</div>
	</aura:if>
	</aura:component>