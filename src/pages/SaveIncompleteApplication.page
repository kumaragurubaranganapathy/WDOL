<apex:page controller="ApplyForSobjectCtlr"
    standardStylesheets="false" sidebar="false" showHeader="false"
     cache="false" applyBodyTag="false" renderAs="pdf">
  <html lang='en'>

  <head>
      <meta charset="UTF-8"/>
      <meta name="viewport" content="width=device-width, initial-scale=1"/>

      <!-- Include script and CSS Files -->
      <!--c:IncludeFilesComp /-->
      <!-- Include script and CSS Files -->
        
        <apex:stylesheet value="{!URLFOR($Resource.ApplicationSavePdfCSS)}"/>
        
