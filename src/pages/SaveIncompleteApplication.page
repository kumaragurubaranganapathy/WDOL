            </apex:outputText> -->
        
          <apex:outputText value="{!evenDateStr}">
               
            
         </apex:outputText>
         
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <apex:outputText style="font-weight: bold" value="Application Status: " /> &nbsp;
            <apex:outputText value="{!applicationStatus}" />
      </div>

    <main>

      <div style="text-align: center;">
          <h1>{!pageTitle}</h1>
      </div>
      
      <apex:form >
        <section class="below-the-fold">
          <div class="container">      
