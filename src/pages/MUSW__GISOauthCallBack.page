<apex:page sidebar="false" standardStylesheets="false" showHeader="false" applyHtmlTag="false" docType="html-5.0">
    <html>
        <head>
          <script>
            function loadHandler() {
              if (opener) {
                //opener.console.log("oauth callback href:", location.href);
                if (location.hash) {
                  opener.require("esri/kernel").id.setOAuthResponseHash(location.hash);
                  close();
                }
              }
              else {
                close();
              }
            }
          </script>
        </head>
        <body onload="loadHandler();">
        </body>
        </html>
</apex:page>