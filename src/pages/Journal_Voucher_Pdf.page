                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>Total: </td>
                <td align="right">${!Amt}</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td>&nbsp;</td>
            </tr>
            
        </table><br/><br/><br/><br/><br/><br/><br/>
        
        <!--3rd Table-->
         <table border="1" style="width: 100%;">
             <tr>
                 <th colspan="6"><b>Explanation of Entry</b></th>
                <th><b>Distribution</b></th>
            </tr>
            
            <apex:repeat value="{!Journal_Voucher__c}" var="jv">
                <tr >
                    <td colspan="6" style="height: 100px;width: 100px; text-align: top-left;">{!jv.Explanation_of_Entry__c	}</td>
                    <td >{!jv.Distribution__c}</td>
                </tr>
            </apex:repeat>
             
              <tr>
                <th>Prepared By</th>
                <th>Telephone Number</th>
                <th>Date</th>
                <th>Approved By</th>
                  <th>Date</th>
            </tr>
            
            <apex:repeat value="{!Journal_Voucher__c}" var="jv">
                <tr>
                    <td>{!jv.Prepared_By__c	}</td>
                    <td>{!jv.Telephone_Number__c}</td>
                     <td>{!preparedByDate}</td>
                     <td>{!jv.Approved_By__c}</td>
                    <td>{!preparedByDate}</td>
                </tr>
            </apex:repeat>
        </table>
        
    </apex:pageBlock>
    </body> 
    </html> 
</apex:page>