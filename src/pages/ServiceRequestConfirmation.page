 <apex:page standardStylesheets="false" sidebar="false" showHeader="false" docType="html-5.0" cache="true" applyHtmlTag="false" applyBodyTag="false" id="page">
    <html lang='en'>
        
        <head>
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1" />
            <!-- Include script and CSS Files -->
            <c:Resources />
            <title>Service Request</title>
        </head>
                
        <body class="internal">
            <c:Header />
            <main class="confirmationPage">
                <div class="container headerMain">
                    <div id="internal-header">
                        <h1>Service Request Submitted</h1>
                    </div>
                    
                    <section class="below-the-fold">
                        <!-- start grey section -->
                        <div class="container">
                            <div class="row-padding savedSuccess"><span class="glyphicon glyphicon-ok-sign"></span><span>Thank you for submitting a service request! </span></div>
                            <div class="row">
                                <p>Your service request Id is: <b>{!$CurrentPage.parameters.Id}</b></p>
                                <p>We will address your request as soon as possible!</p>
                            </div>
                            <div class="row btn-paddingMid">
                                <input type="button" style="float:center" class="btn btn-primary" value="Done" onclick="window.location = '/Dashboard'" />
                            </div>
                            
                        </div>
                    </section>
                </div>
            </main>
            <c:Footer />
            <!-- Footer goes before the end of body -->
        </body>
    
    </html>
</apex:page>