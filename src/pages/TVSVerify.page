<apex:page controller="TVSVerify_CC" showHeader="false" sidebar="false">
  <apex:pageBlock id="resultBlock">
      <apex:pageMessages id="messages" />
      <apex:pageBlockSection >
          <apex:pageBlockSectionItem >DOR Response <apex:outputText value="{!dorResponse}" /></apex:pageBlockSectionItem>
          <apex:pageBlockSectionItem >
              DOR Response Timestamp <apex:outputText value="{0, date, MM/dd/yyyy hh:mm:ss}">
                  <apex:param value="{!dorResponseTime}" />
              </apex:outputText>
          </apex:pageBlockSectionItem>
          <apex:pageBlockSectionItem >DOR Response Description <apex:outputText value="{!dorResponseDescription}" /></apex:pageBlockSectionItem>
      </apex:pageBlockSection>
  </apex:pageBlock>
  
  <apex:form >
      <apex:actionFunction name="verifyDetails" action="{!verifyDetails}" status="wsStatus" reRender="resultBlock" />
  </apex:form>
  
  <apex:actionStatus id="wsStatus">
    <apex:facet name="start">
    <div style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; opacity: 0.25; z-index: 1000; background-color: black;">
        &nbsp;
    </div>
    <div style="position: fixed; left: 0; top: 0; bottom: 0; right: 0; z-index: 1001; margin: 15% 50%">
        <div style="display: inline-block; padding: 2px; background-color: #fff; width: 125px;">
            <img src="/img/loading.gif" style="float: left; margin: 8px;" />
            <span style="display: inline-block; padding: 10px 0px;">Please Wait...</span>
        </div>
    </div>
    </apex:facet>
  </apex:actionStatus>
  
  <script>
      window.onload=verifyDetails();
  </script>
</apex:page>