<apex:page controller="MUSW.EncryptorController">
<apex:form >
    <apex:sectionHeader title="Administrator Configuration" subtitle="Encryptor">
        <apex:pageMessages id="msgs"/>
    </apex:sectionHeader>
    
    <apex:pageBlock >
        
        <apex:pageBlockSection columns="1">
            Enter administrator user credentials. These values will be encrypted and inaccessible by other users.
            <apex:inputText value="{!username}" id="theTextInput" title="User Name" label="Username" required="true"/>
            <apex:inputSecret value="{!password}" id="theSecretTextInput" title="Password" label="Password" required="true"/>
        </apex:pageBlockSection>
        <apex:commandButton value="Encrypt & Save" action="{!save}" id="saveButton"/>
    </apex:pageBlock>
</apex:form>
</apex:page>