<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <customSettingsType>Hierarchy</customSettingsType>
    <description>Settings needed for Single and Batch Letters</description>
    <enableFeeds>false</enableFeeds>
    <fields>
        <fullName>BGBL__Batch_Letter_Chunk_Size__c</fullName>
        <defaultValue>5000</defaultValue>
        <deprecated>false</deprecated>
        <description>Job will return with error if enter &gt; 5,000</description>
        <externalId>false</externalId>
        <inlineHelpText>If blank, batch letter job chunk size is limited to 5,000. Enter any number only up to 5,000.</inlineHelpText>
        <label>Batch Letter Chunk Size</label>
        <precision>5</precision>
        <required>false</required>
        <scale>0</scale>
        <trackTrending>false</trackTrending>
        <type>Number</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>BGBL__Letter_Request_Endpoint__c</fullName>
        <defaultValue>&quot;https://lettersingle.mybasicgov.com/RunBatchMergeJob/SingleLetter.aspx&quot;</defaultValue>
        <deprecated>false</deprecated>
        <description>Setting will overwrite default production single letter request endpoint to any url or ip of Admin&apos;s choosing (for testing and migration purposes).</description>
        <externalId>false</externalId>
        <inlineHelpText>Setting will overwrite default production single letter request endpoint to any url or ip of Admin&apos;s choosing (for testing and migration purposes).</inlineHelpText>
        <label>Single Manual Letter Request Endpoint</label>
        <required>false</required>
        <trackTrending>false</trackTrending>
        <type>Url</type>
    </fields>
    <fields>
        <fullName>BGBL__Request_Objects_Additional__c</fullName>
        <deprecated>false</deprecated>
        <description>only needed when Attach Letter button refers to the letterAttach scontrol (as opposed to the LetterRequest VF page)</description>
        <externalId>false</externalId>
        <inlineHelpText>when including Attach Letter button to an object, add object API name to this list. comma-delimited. no spaces. do not include Permit2, License2, Application2. The shorter this list, the quicker the page loads.</inlineHelpText>
        <label>Single Man. Reqst Objects - Additional</label>
        <length>255</length>
        <required>false</required>
        <trackTrending>false</trackTrending>
        <type>Text</type>
        <unique>false</unique>
    </fields>
    <fields>
        <fullName>BGBL__Save_Generated_Document_as_File__c</fullName>
        <defaultValue>false</defaultValue>
        <deprecated>false</deprecated>
        <externalId>false</externalId>
        <inlineHelpText>Save the generated document as File. If unchecked, it is saved as Attachment</inlineHelpText>
        <label>Save Generated Document as File</label>
        <trackTrending>false</trackTrending>
        <type>Checkbox</type>
    </fields>
    <label>BG Letter Engine settings</label>
    <visibility>Public</visibility>
</CustomObject>
