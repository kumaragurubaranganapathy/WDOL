<aura:component implements="flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" controller="LnP_CalculateSystemGeneratedAmountClass" access="global" >
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
	<aura:attribute name="HideSpinner" type="Boolean" default="false"/>
    <aura:attribute name="smsg" type="Boolean" default="false"/>
    <aura:attribute name="ErrorMsg" type="Boolean" default="false"/>
    <aura:attribute name="emsg" type="Boolean" default="false"/>
    <aura:if isTrue="{!v.emsg}">
        <ui:message title="Error" severity="error" closable="false">
           Unable to calculate system generated amount. Please try again later or contact your System Admin.
        </ui:message>
    </aura:if>
    <aura:if isTrue="{!v.smsg}">
        <ui:message title="Confirmation" severity="confirm" closable="false">
           Successfully updated system generated amount.
        </ui:message>
    </aura:if>
    <aura:if isTrue="{!v.HideSpinner}">
   	<div class="customSpinner" >
        <lightning:spinner alternativeText="Loading" size="medium" class="slds-align_absolute-center"  />
    </div>
    </aura:if>
</aura:component>